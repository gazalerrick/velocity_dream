root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 8
charset = utf-8
# To avoid editing too much in commits
trim_trailing_whitespace = false

[flasher/**]
indent_style = tab
indent_size = 4
# We're free to do anything in flasher/
trim_trailing_whitespace = true

[flasher/{anykernel.sh, ak2-core.sh, META-INF/**, powerhint.json}]
indent_style = space
indent_size = 2

[{helpers, setup*}.sh]
indent_style = space
indent_size = 4
